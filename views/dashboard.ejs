<%- include("blocks/navbar") %>
<div class="row p-2 bg-dark text-white full-height">
	<div class="col-2 border-white border-end border-top">
		<h5>Channels</h5>
		<div class="row" id="channel_list"></div>
		<hr />
		<button
			type="button"
			class="btn btn-sm btn-outline-light"
			data-bs-toggle="modal"
			data-bs-target="#addChannelModal"
		>
			+
		</button>
		Add Channel
	</div>
	<div
		class="modal fade text-dark"
		id="addChannelModal"
		tabindex="-1"
		aria-labelledby="addChannelModalLabel"
		aria-hidden="true"
	>
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="addChannelModalLabel">Add Channel</h5>
					<button
						type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Close"
					></button>
				</div>
				<div class="modal-body">
					<form id="channel_form">
						<label for="new_channel_input">Name</label>
						<input type="text" id="new_channel_input" />
					</form>
				</div>
				<div class="modal-footer">
					<button
						type="button"
						class="btn btn-secondary"
						data-bs-dismiss="modal"
					>
						Close
					</button>
					<button
						onclick="createChannel()"
						type="button"
						class="btn btn-primary"
					>
						Create
					</button>
				</div>
			</div>
		</div>
	</div>
	<%- include("blocks/mainboard") %>
	<div class="col-4 border-white border-start border-top">
		<h5>Thread</h5>
	</div>
</div>
